# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/obveznik

# Redis
REDIS_URL=redis://localhost:6379/0

# Email (SendGrid SMTP)
