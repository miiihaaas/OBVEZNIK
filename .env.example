# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/obveznik

# Redis
REDIS_URL=redis://localhost:6379/0

# Email (SendGrid SMTP)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@obveznik.com

# NBS Komitent API (Company & Bank Account Lookup)
NBS_USERNAME=your-nbs-username-here
NBS_PASSWORD=your-nbs-password-here
NBS_LICENCE_ID=your-nbs-licence-id-here

# Testing (optional)
TEST_DATABASE_URL=mysql+pymysql://root:password@localhost:3306/obveznik_test
